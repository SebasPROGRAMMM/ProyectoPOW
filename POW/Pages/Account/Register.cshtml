@page
@model Pow.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h2>Registrarse</h2>
            

            <form method="post">
                <div class="form-group">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Contraseña</label>
                    <input asp-for="Input.Password" type="password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Nombre">Nombre</label>
                    <input asp-for="Input.Nombre" class="form-control" />
                    <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.RolId">Rol</label>
                    <select asp-for="Input.RolId" class="form-control">
                        <option value="">Selecciona tu rol</option>
                        <!-- Asegúrate de que estos valores coincidan con los IDs de los roles en tu base de datos -->
                        <option value="1">Estudiante</option>
                        <option value="2">Profesor</option>
                    </select>
                    <span asp-validation-for="Input.RolId" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Registrar</button>
            </form>
        </div>
    </div>
</body>
</html>
